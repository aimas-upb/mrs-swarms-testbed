<launch>
  <env name="TURTLEBOT3_MODEL" value="burger" />

 <!-- launch a teleop node -->
  <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="teleop" output="screen">
    <remap from="cmd_vel" to="robot1/cmd_vel"/>
  </node>

  <param name="robot_description"
    command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find swarm-testbed)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 3 -y 4 -z 0" />
      <arg name="robot_name"  value="Robot1" />
    </include>
  </group>


  <!-- BEGIN ROBOT 2-->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find swarm-testbed)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x -2 -y 4 -z 0" />
      <arg name="robot_name"  value="Robot2" />
    </include>
  </group>
</launch>
